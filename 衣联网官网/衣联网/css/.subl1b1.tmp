body{
	background: #fff;
}

/*导航栏顶部*/
header #top{
	position: relative;
	width: 100%;
	height: 30px;
	background-color: #fff;
	/*border:1px red solid;*/
}
header #top #left{
	float: left;
}
header #top #left #hello{
	margin-left: 70px;
}
header #top #left span{
	margin-left: 15px;
	line-height: 30px;
	font-size: 12px;
	/*border:1px red solid;*/
	/*font-weight: bold;*/
	color: #666666;
}
header #top #left a,header #top #right a{
	text-decoration: none;
	color: #666666;

}

header #top #left a:hover,header #top #right a:hover{
	color: red;
}
header #top #right{
	height: 30px;
	float: right;
	margin-right: 30px;
	/*border:1px blue solid;*/
}
header #top #right ul li{
	float: left;
	/*width: 75px;*/
	margin-right: 40px;
	list-style: none;
	line-height: 30px;
	font-size: 12px;
	/*border: 1px red solid;*/
}
header #top #right ul li img{
	margin-right: 5px;
	vertical-align: middle;
}
/*我的衣联*/
header #top #mycloth{
	position: absolute;
	right: 580px;
	top: 30px;
	width: 80px;
	height: 160px;
	background-color: #fff;
	line-height: 20px;
	display: none;
	/*border: 1px red solid;*/

}
header #top #mycloth h6 a{
	color: black;
	padding-left: 8px;
	margin-top: 10px;
}
header #top #mycloth a{
	display: block;
	padding-left: 8px;
	font-size: 12px;
}
/*我的收藏*/
header #top #collect{
	position: absolute;
	right: 345px;
	top: 30px;
	width: 80px;
	height: 80px;
	display: none;
	background-color: #fff;
	/*border:1px red solid;*/
}
header #top #collect ul{
	margin-top: 10px; 
}
header #top #collect ul li{
	margin-top: 5px; 
}
header #top #collect ul li a{
	font-size: 12px;
	padding-left: 7px;
}


/*logo*/
.logo{
	width: 1250px;
	height: 70px;
	margin: 10px auto;
	/*border: 1px red solid;*/
}

/*中间部分*/
#loginbox{
	width: 1200px;
	height:500px;
	border: 1px red solid;
	margin: 0 auto;

}
#loginpic{
	float: left;
	margin-top: 80px;
	margin-left:20px; 
	
}
#login{
	float: right;
	margin-right: 100px; 
	margin-top:20px; 
	width: 370px;
	height: 380px;
	border: 1px #333 solid;
}
#loginmethd{
	width: 80%;
	height: 55px;
	margin: 10px auto;
	border-bottom: 2px #D4D4D4 solid;

}
#pwdmethed,#nopwdmethed{
	width: 148px;
	height: 55px;
	float: left;
	/*border: 1px red solid;*/
	line-height: 55px;
	text-align: center;
	font-size: 14px;
	color: #666;
	cursor: pointer;

}
#login input{
	margin-left: 30px; 

}